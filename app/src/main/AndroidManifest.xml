<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.tiwiz.rxjavacrunch" >
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".part1.Part1Activity"
            android:label="@string/title_activity_part1" >
        </activity>
        <activity
            android:name=".part3.Part3Activity"
            android:label="@string/title_activity_part3" >
        </activity>
        <activity
            android:name=".part4.Part4Activity"
            android:label="@string/title_activity_part4" >
        </activity>
        <activity
            android:name=".part5.Part5Activity"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_part5" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.tiwiz.rxjavacrunch.MainActivity" />
        </activity>
        <activity
            android:name=".part6.Part6Activity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_part6" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.tiwiz.rxjavacrunch.MainActivity" />
        </activity>
        <activity
            android:name=".part7.WeatherActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_part7" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.tiwiz.rxjavacrunch.MainActivity" />
        </activity>
    </application>

</manifest>
